Options +SymLinksIfOwnerMatch
RewriteEngine On
RewriteBase /
RewriteCond %{HTTP_HOST} ^kriskras-akabe\.be$ [NC]
RewriteRule ^(.*)$ http://www.kriskras-akabe.be/$1 [R=301,L]


RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^(.*) /ultrawiki/index.php/$1 [QSA,L]

php_flag magic_quotes_gpc off